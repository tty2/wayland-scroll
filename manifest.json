{
  "name": "Wayland Scroll",
  "version": "0.1",
  "description": "Change the scroll apperience and allows to adjust speed",
  "permissions": ["storage", "tabs", "http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "all_frames": true,
      "css": ["scroll.css"],
      "matches": ["*://*/*"],
      "run_at": "document_start"
    }
  ],
  "manifest_version": 2
}
